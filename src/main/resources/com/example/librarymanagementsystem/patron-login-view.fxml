<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.librarymanagementsystem.controller.PatronLoginController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="15" layoutX="150.0" layoutY="100.0">
        <Label text="Library Management System" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
        <TextField fx:id="usernameField" promptText="Enter your username"/>
        <TextField fx:id="libraryIdField" promptText="Enter your library ID"/>
        <Button fx:id="loginButton" text="Login" prefWidth="100"/>
    </VBox>
</AnchorPane>
